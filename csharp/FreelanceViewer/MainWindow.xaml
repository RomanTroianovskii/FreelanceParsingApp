<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="FreelanceViewer.MainWindow"
        Title="Freelance Viewer" Width="1000" Height="600">
  <DockPanel LastChildFill="True">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="6">
      <Button x:Name="FetchButton" Content="Fetch" Margin="0,0,6,0" />
      <Button x:Name="RefreshButton" Content="Refresh" Margin="0,0,6,0" />
      <TextBox x:Name="SearchBox" Width="300" Watermark="Поиск по заголовку..." />
      <Button x:Name="OpenUrlButton" Content="Open URL" Margin="6,0,0,0" />
    </StackPanel>

    <DataGrid x:Name="OffersGrid" ItemsSource="{Binding FilteredOffers}" AutoGenerateColumns="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Site" Binding="{Binding Site}" Width="100" />
        <DataGridTemplateColumn Header="Title" Width="*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Title}" TextWrapping="Wrap" MaxWidth="600" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="Budget" Binding="{Binding Budget}" Width="120" />
        <DataGridTextColumn Header="Posted" Binding="{Binding PostedAt}" Width="150" />
        <DataGridTemplateColumn Header="URL" Width="200">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Url}" TextTrimming="CharacterEllipsis" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </DockPanel>
</Window>